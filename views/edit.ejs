<% include partials/header %>
<div class="container-fluid formBody">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form method="POST" action="/articles/<%= article._id%>?_method=PUT" id="form" enctype="multipart/form-data">
             <div class="form-group">
               <label for="exampleFormControlInput1">Edit title</label>
               <input name="title" type="text" class="form-control" id="exampleFormControlInput1" value= "<%= article.title %>" required>
            </div>
            <div class="form-group">
               <label for="exampleFormControlTextarea1">Edit article</label>
               <textarea name="body" class="form-control" id="exampleFormControlTextarea1" rows="3" required><%= article.body %></textarea>
            </div>
            <div class="form-group">
               <label for="exampleFormControlFile1">Edit image</label>
               <input name="image" type="file" class="form-control-file" id="exampleFormControlFile1">
            </div>
            <button type="submit" class="btn btn-secondary">Submit</button>
            </form>
        </div>
    </div>
</div>

